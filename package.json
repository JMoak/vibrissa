{
  "name": "vibrissa",
  "version": "0.1.0",
  "description": "Ultra-light JSON-driven MCP integration test runner",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "vib-test": "bin/vib-test.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "files": ["dist", "bin", "schema", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --target node20 --dts --clean --sourcemap --external fast-glob",
    "dev": "tsup src/cli.ts src/index.ts --format esm --target node20 --dts --watch --sourcemap --external fast-glob",
    "typecheck": "tsc --noEmit",
    "test": "jest --config ./jest.config.cjs --runInBand --colors",
    "test:ci": "jest --config ./jest.config.cjs --reporters=default --reporters=jest-junit",
    "e2e": "npm run build && node bin/vib-test.js --config tests/fixtures/echo-server/vibrissa.jsonc --cases \"tests/fixtures/echo-server/cases/**/*.json\"",
    "lint": "biome check . --write",
    "lint:fix": "biome check . --write --unsafe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JMoak/vibrissa.git"
  },
  "keywords": ["mcp", "integration", "testing"],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JMoak/vibrissa/issues"
  },
  "homepage": "https://github.com/JMoak/vibrissa#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.13",
    "jest": "^30.1.3",
    "jest-junit": "^16.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "jest-diff": "^30.1.3"
  }
}
